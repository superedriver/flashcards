.well.bs-component
  = simple_form_for @deck, html: {class: 'form-horizontal'} do |f|
    = render partial: 'shared/validation_errors', locals: { object: @deck }
    %fieldset
      = f.input :name
      - if @deck.new_record?
        = f.submit t('buttons.save'), class: 'btn btn-primary'
        = link_to t('buttons.cancel'), decks_path, class: 'btn btn-default'
      - else
        = f.submit t('buttons.edit'), class: 'btn btn-primary'
        = link_to t('buttons.delete'), @deck, method: :delete, data: { confirm: t('confirm.delete_card') }, class: 'btn btn-danger'
        = link_to t('buttons.cancel'), decks_path, class: 'btn btn-default'
