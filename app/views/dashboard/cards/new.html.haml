%h1
  = I18n.t("views.cards.new")
  \:
.well.bs-component
  = simple_form_for [@deck,@card], as: :card,
    html: {class: "form-horizontal"} do |f|
    = render partial: 'shared/validation_errors', locals: { object: @card }
    %fieldset
      = render partial: 'form', locals: { f: f }
      = f.submit I18n.t("buttons.save"), class: "btn btn-primary"
      = link_to I18n.t("buttons.cancel"), deck_cards_path, class: "btn btn-default"