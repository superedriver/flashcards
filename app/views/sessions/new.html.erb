<% unless logged_in? %>
    <h1>Login</h1>
    <div class="well bs-component">
      <%= form_tag sessions_path, :method => :post do %>
        <fieldset>
          <div class="form-group">
            <%= label_tag :email %><br />
            <%= text_field_tag :email %>
          </div>
          <div class="form-group">
            <%= label_tag :password %><br />
            <%= password_field_tag :password %>
          </div>
          <div class="form-group">
            <%= submit_tag I18n.t("buttons.login") , class: 'btn btn-primary btn-lg'%>
          </div>
        </fieldset>
      <% end %>
    </div>
<% else %>
    <h1>Вы уже вошли систему!</h1>
    <h2>ID: <%= current_user.id %></h2>
    <h2>email: <%= current_user.email %></h2>
    <%= link_to I18n.t("buttons.logout"), logout_path, method: :post , class: "btn btn-primary btn-lg" %>
<% end %>

