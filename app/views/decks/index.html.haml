%table.table.table-striped.table-hover
  %thead
    %tr
      %th â„–
      %th= I18n.t("activerecord.attributes.deck.name")
      %th= I18n.t("views.decks.index.words")
      %th= I18n.t("views.decks.index.actions")
  %tbody#cards
    - @decks.each.with_index(1) do |deck, index|
      %tr
        %td= index
        %td= deck.name
        %td= deck.cards.count
        %td
          = link_to I18n.t("buttons.view"),
            deck_path(deck),
            class: "btn btn-default btn-sm"
          = link_to I18n.t("buttons.edit"),
            edit_deck_path(deck),
            class: "btn btn-primary btn-sm"
          = link_to I18n.t("buttons.delete"),
            deck,
            method: :delete,
            data: { confirm: I18n.t("confirm.delete_card") },
            class: "btn btn-danger btn-sm"
          = link_to get_active_button(deck),
            get_active_url(deck),
            class: get_active_class(deck)
          = link_to I18n.t("buttons.add_card"),
            new_deck_card_path(deck),
            class: "btn btn-info btn-sm deck-button-right"
