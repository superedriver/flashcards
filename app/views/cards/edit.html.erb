<h1>Редактирование карты:</h1>
<div class="well bs-component">
  <%= simple_form_for @card, html: {class: "form-horizontal"} do |f| %>
    <%= render partial: 'shared/validation_errors', locals: { object: @card }  %>

    <fieldset>
      <legend>Card ID: <%= @card.id %></legend>

      <%= render partial: '/shared/form', locals: { f: f, property: :original_text, value: I18n.t("activerecord.attributes.card.original_text") }  %>
      <%= render partial: '/shared/form', locals: { f: f, property: :translated_text, value: I18n.t("activerecord.attributes.card.translated_text" ) }  %>

      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit I18n.t("buttons.edit"), class: "btn btn-primary" %>
          <%= link_to I18n.t("buttons.delete"), @card, method: :delete, data: { confirm: I18n.t("confirm.delete_card") }, class: "btn btn-danger" %>
          <%= link_to I18n.t("buttons.cansel"), cards_path, class: "btn btn-default" %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>