<% card.errors.messages.each do | key, message |%>
    <% message.each do | err_message |%>
        <div class="alert alert-dismissible alert-danger">
          <% key_for_message = key.present? ? "field.#{key}" : 'field.empty_text' %>
          <%= I18n.t(key_for_message) + " " + err_message %>  <br />
        </div>
    <% end %>
<% end %>