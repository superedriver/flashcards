<div class="well bs-component">
  <div class="h1 word_for_translate <%= @check_result.present? ? "text-success" : "text-danger" %>">
    <p><b><%= @check_result.present? ? I18n.t("compare_result.right").mb_chars.upcase :
                  I18n.t("compare_result.not_right").mb_chars.upcase %>!</b></p>
  </div>
  <div class="h1 word_for_translate text-info">
    <p><%= params[:translated_text].upcase %></p>
  </div>
  <div class="h1 word_for_translate <%= @check_result.present? ? "text-info" : "text-danger" %>">
    <p><%= params[:card][:original_text].mb_chars.upcase %></p>
  </div>
  <div class="h1 word_for_translate text-warning">
    <p><b><%= params[:original_text].mb_chars.upcase %></b></p>
  </div>
</div>
<div class="form-group">
  <div class="col-lg-10 col-lg-offset-2">
    <%= link_to "Продолжить", root_path, class: "btn btn-success btn-lg" %>
    <%= link_to "К карточкам", cards_path, class: "btn btn-default btn-lg" %>
  </div>
</div>